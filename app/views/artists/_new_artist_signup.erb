<%= form_tag("/artists") do %>
  <div class='form-group'>
    <%= label_tag "name" %>
    <%= text_field_tag "name", nil, :class => 'form-control', placeholder: 'Creative Name' %>
  </div>
  <div class='form-group'>
    <%= label_tag "username" %>
    <%= text_field_tag "username", nil, :class => 'form-control', placeholder: 'WhosCreative' %>
  </div>
  <div class='form-group'>
    <%= label_tag "email" %>
    <%= text_field_tag "email", nil,  :class => 'form-control', placeholder: 'Creative@me.com' %>
  </div>
  <div class='form-group'>
    <%= label_tag "password" %>
    <%= password_field_tag "password", nil, :class => 'form-control', placeholder: '********' %>
  </div>
  <%= submit_tag 'sign up', :class => 'btn btn-default' %>
<% end %>